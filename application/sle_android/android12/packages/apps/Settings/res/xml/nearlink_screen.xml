<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="nearlink_switchbar_screen"
    android:title="@string/nearlink_settings_title">

    <Preference
        android:key="nearlink_screen_sle_pair_rename_devices"
        android:title="@string/nearlink_device_name"
        android:summary="@string/summary_placeholder"
        settings:controller="com.android.settings.nearlink.NearlinkDeviceRenamePreferenceController"/>

    <com.android.settingslib.RestrictedPreference
        android:key="nearlink_screen_add_sle_devices"
        android:title="@string/nearlink_pairing_pref_title"
        android:icon="@drawable/ic_add_24dp"
        android:summary="@string/connected_sledevice_add_device_summary"
        android:fragment="com.android.settings.nearlink.NearlinkPairingDetail"
        android:visible="false"
        settings:allowDividerAbove="true"
        settings:userRestriction="no_config_nearlink"
        settings:useAdminDisabledSummary="true"
        settings:controller="com.android.settings.nearlink.AddSleDevicePreferenceController"/>

    <com.android.settingslib.widget.FooterPreference
        android:key="nearlink_screen_footer"
        android:selectable="false"
        settings:searchable="false"/>

</PreferenceScreen>